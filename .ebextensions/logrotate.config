files:
    '/etc/logrotate.d/customrotate':
        mode: '644'
        owner: root
        group: root
        content: |
            /var/log/messages
            {
               daily
               rotate 4
               compress
               size 300M
               missingok
               sharedscripts
               postrotate
                  /bin/kill -HUP `cat /var/run/syslogd.pid 2> /dev/null` 2> /dev/null || true
               endscript
            }
